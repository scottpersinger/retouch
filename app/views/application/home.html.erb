<div style="float:right;margin-top:76px;width:410px;">
  <h1>We can turn <i>your</i> photo into a <i>hot pic!</i></h1>
  <p class="shadowtext"><img src="/images/site/star1.png" />Hot pics are proven to get more attention online.</p>
  <p class="shadowtext"><img src="/images/site/star2.png" />Get more <span class="under">emails</span> and <u>winks</u> on Match.com.</p>
  <p class="shadowtext"><img src="/images/site/star3.png" />We can fix flaws, and make you look great.</p>

</div>

<img src="/images/site/before1.png" style="position:absolute;top:39px;left:10px" />
<img src="/images/site/after1.png" style="position:absolute;top:-88px;left:151px" />

<div class="white-box" style="margin-top:400px;">
  <table style="width:100%;font-size:20px" class="steps">
    <td style="width:25%">
      <h2>Step One:</h2>Upload your photo.<br />
      <a href="#" id="get-started"><img src="/images/site/get-started.png" /></a>
    </td>
    <td style="width:37%"><h2>Step Two:</h2>Our photo experts create<br />the best version of your photo.</td>
    <td style="width:37%"><h2>Step Three:</h2>You pick and download<br />your favorite one.</td>
  </table>
</div>

<div style="clear:both"></div>

<% form_tag "/products", :multipart => true, :onsubmit => "return check_form(this)" do %>
<div class="white-box" style="visibility:hidden;margin-top:20px;" id="upload">
  <table style="width:100%;font-size:20px;line-height:37px" class="steps">
    <td style="width:25%">
      <div>Enter your email</div>
      <div>Choose photo</div>
      <div>
        <div style="float:right;padding:13px 36px 0px 0px"><img id="indicator" src="/images/indicator.gif" style="display:none"/></div>
        <button type="submit" class="mybutton uploadbutton"></button>
      </div>
    </td>
    <td style="width:70%">
      <div style="height:37px"><input type="text" name="email" style="width:288px;height:22px;border-radius:10px;padding:2px 8px;font-size:18px"></input></div>
      <div style="height:37px">        
        <%= file_field_tag :image, :style => 'margin-top:8px;' %></div>
    </td>
  </table>
</div>
<% end %>


<script>
  function check_form(form) {
    if (form.email.value == '') {
      alert("We need your email in case we need to contact you");
      return false;
    }
    if (form.image.value == '') {
      alert("Please pick a photo to upload");
      return false;
    }
    // looks good
    $j('#indicator').show();
    $j('form button').attr('disabled', true).css('background-position', 'right -48px');
    return true;
  }

  $j(function() {
    $j('#get-started').click(function() {
      $j('#upload').css('visibility', 'visible');
      $j.scrollTo($j('#upload'));
      return false;
    })
  })

</script>

